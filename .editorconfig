# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.{js, ts, scss}]
quote_type = single
indent_style = tab

[*.html]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false
